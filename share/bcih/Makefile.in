topsrc = @top_srcdir@

CC = @CC@
prefix = @prefix@

VPATH = $(topsrc)/share/bcih

gretldir = $(prefix)/share/gretl
INSTALL_DATA = cp -fp

mkbin: mkbin.c
	$(CC) -o $@ $<

bcih.bin: mkbin bcih.dat
	./mkbin $(topsrc)/share/bcih 

install: bcih.bin
	$(INSTALL_DATA) bcih.bin $(gretldir)/db/bcih.bin
	$(INSTALL_DATA) $(topsrc)/share/bcih/bcih.idx $(gretldir)/db/bcih.idx

clean:
	rm -f mkbin bcih.bin

distclean: clean
	rm -f Makefile