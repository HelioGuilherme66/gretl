topsrc = @top_srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
CC = @CC@
CFLAGS = @CFLAGS@
MAKE = @MAKE@
INSTALL = @INSTALL@
LN = @LN_S@

have_gtk = @have_gtk@
GTK_CFLAGS = @GTK_CFLAGS@
GTK_LIBS = @GTK_LIBS@
XML_CFLAGS = @XML_CFLAGS@
XML_LIBS = @XML_LIBS@
LIBOLE2_CFLAGS = @LIBOLE2_CFLAGS@
LIBOLE2_LIBS = @LIBOLE2_LIBS@
GMP_CFLAGS = @GMP_CFLAGS@
GMP_LIBS = @GMP_LIBS@
LAPACK_LIBS = @LAPACK_LIBS@
HAVE_X12A = @HAVE_X12A@
HAVE_TRAMO = @HAVE_TRAMO@

ifeq ($(CC),)
  CC = gcc
endif
ifeq ($(INSTALL_PROGRAM),)
  INSTALL_PROGRAM = $(INSTALL) -m 755
endif

VPATH = $(topsrc)/plugin

# Installation directory
plugindir = $(prefix)/lib/gretl

override CFLAGS += -I.. -DHAVE_CONFIG_H

LIBTOOL = ../libtool
COMPILE = $(LIBTOOL) --mode=compile $(CC) -c $(CFLAGS) 
LINK = $(LIBTOOL) --mode=link $(CC) -module -avoid-version -rpath $(plugindir)

GRETLINC = -I$(topsrc)/lib/src
GRETLLIB = ../lib/libgretl-1.0.la

ifeq ($(have_gtk),2.0)
  GTK_CFLAGS += -DGTK_DISABLE_DEPRECATED
  GRETL_LIBOLE2_CFLAGS := -I$(topsrc)/plugin $(shell pkg-config --cflags glib-2.0)
else
  GRETL_LIBOLE2_CFLAGS := -I$(topsrc)/plugin $(shell glib-config --cflags)
endif  

SRCS = excel_import.c gnumeric_import.c gretl_matrix.c import_common.c \
	johansen.c lad.c longname.c mp_ols.c panel_data.c progress_bar.c \
	range-mean.c stats_tables.c sur.c tramo_options.c tramo-x12a.c \
	workbook.c

PLUGINS = lad.la stats_tables.la panel_data.la range-mean.la \
	progress_bar.la gnumeric_import.la excel_import.la $(TXPLUGIN)

LAPACK_PLUGINS = johansen.la sur.la 

ifdef GMP_LIBS
  PLUGINS += mp_ols.la
endif

ifdef LAPACK_LIBS
  PLUGINS += $(LAPACK_PLUGINS)
  LAPACK_CFLAGS = -I.
endif

ifeq ($(HAVE_TRAMO),1)
  TXPLUGIN = tramo-x12a.la
endif
ifeq ($(HAVE_X12A),1)
  TXPLUGIN = tramo-x12a.la
endif

ifeq ($(LIBOLE2_LIBS),)
  query-ms-ole.lo = ms-ole.lo
  vpath %.c $(topsrc)/plugin/libole2
  vpath %.h $(topsrc)/plugin/libole2
  LIBOLE2_CFLAGS = $(GRETL_LIBOLE2_CFLAGS)
endif

%.lo: %.c
	$(COMPILE) $(GRETLINC) $(GTK_CFLAGS) $(GMP_CFLAGS) $(XML_CFLAGS) \
	$(LIBOLE2_CFLAGS) $(LAPACK_CFLAGS) $< 
	$(CC) -MM -MG $(GRETLINC) $< >$*.d 2>/dev/null

all: $(PLUGINS)

-include $(SRCS:.c=.d)

stats_tables.la: stats_tables.lo
	$(LINK) -o $@ $< $(GRETLLIB)

panel_data.la: panel_data.lo
	$(LINK) -o $@ $< $(GRETLLIB)

range-mean.la: range-mean.lo
	$(LINK) -o $@ $< $(GRETLLIB)

lad.la: lad.lo
	$(LINK) -o $@ $< $(GRETLLIB)

tramo-x12a.la: tramo-x12a.lo tramo_options.lo
	$(LINK) -o $@ $^ $(GTK_LIBS) $(GRETLLIB)

progress_bar.la: progress_bar.lo
	$(LINK) -o $@ $< $(GTK_LIBS)

gnumeric_import.la: gnumeric_import.lo
	$(LINK) -o $@ $< $(GTK_LIBS) $(GRETLLIB) $(XML_LIBS)

excel_import.la: excel_import.lo workbook.lo $(query-ms-ole.lo)
	$(LINK) -o $@ $^ $(GTK_LIBS) $(GRETLLIB) $(LIBOLE2_LIBS)

mp_ols.la: mp_ols.lo
	$(LINK) -o $@ $< $(GRETLLIB) $(GMP_LIBS)

johansen.la: johansen.lo gretl_matrix.lo
	$(LINK) -o $@ $^ $(GRETLLIB) $(LAPACK_LIBS)

sur.la: sur.lo gretl_matrix.lo
	$(LINK) -o $@ $^ $(GRETLLIB) $(LAPACK_LIBS)

$(GRETLLIB):
	$(MAKE) -C ../lib

.PHONY: 

install: $(PLUGINS) installdirs
	$(LIBTOOL) --mode=install $(INSTALL_PROGRAM) \
	$(PLUGINS) $(plugindir)

install-strip: $(PLUGINS) installdirs
	$(LIBTOOL) --mode=install $(INSTALL_PROGRAM) -s \
	$(PLUGINS) $(plugindir)

install-lapack: $(GRETLLIB) $(LAPACK_PLUGINS) installdirs
	$(LIBTOOL) --mode=install $(INSTALL_PROGRAM) \
	$(LAPACK_PLUGINS) $(plugindir)

installdirs:
	$(topsrc)/tools/mkinstalldirs $(plugindir)

clean:
	rm -f *.o *.d *.lo *.la core 
	rm -rf .libs

distclean: clean
	rm -f Makefile

