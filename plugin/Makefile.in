topsrc = ..

prefix = @prefix@
exec_prefix = @exec_prefix@
CC = @CC@
CFLAGS = @CFLAGS@
MAKE = @MAKE@
INSTALL = @INSTALL@
LN = @LN_S@

XML_CFLAGS = @XML_CFLAGS@
XML_LIBS = @XML_LIBS@
OLE_CFLAGS = @OLE_CFLAGS@
OLE_LIBS = @OLE_LIBS@

ifeq ($(CC),)
  CC = gcc
endif
ifeq ($(INSTALL_PROGRAM),)
  INSTALL_PROGRAM = $(INSTALL) -m 755
endif

# Installation directory
share = $(prefix)/share/gretl

LIBTOOL = $(topsrc)/libtool
COMPILE = $(LIBTOOL) --mode=compile $(CC) -c -fPIC -DPIC $(CFLAGS) 
LINK = $(LIBTOOL) --mode=link $(CC) $(CFLAGS) -shared

GRETLINC = -I$(topsrc)/lib/src
GRETLLIB = ../lib/libgretl.la
GTKINC = `gtk-config --cflags`
GTKLIB = `gtk-config --libs`

PLUGINS = stats_tables.so panel_data.so progress_bar.so \
	gnumeric_import.so excel_import.so

ifeq ($(OLE_LIBS),)
  query-ms-ole.lo=ms-ole.lo
  vpath %.c libole2
  vpath %.h libole2
endif

all: $(PLUGINS)

stats_tables.so: stats_tables.lo
	$(LINK) -o $@ $< $(GRETLLIB)

panel_data.so: panel_data.lo
	$(LINK) -o $@ $< $(GRETLLIB)

progress_bar.so: progress_bar.lo
	$(LINK) -o $@ $< $(GTKLIB)

gnumeric_import.so: gnumeric_import.lo
	$(LINK) -o $@ $< $(GTKLIB) $(GRETLLIB) $(XML_LIBS)

excel_import.so: excel_import.lo workbook.lo $(query-ms-ole.lo)
	$(LINK) -o $@ $^ $(GTKLIB) $(GRETLLIB) $(OLE_LIBS)

stats_tables.lo: stats_tables.c $(GRETLLIB) 
	$(COMPILE) $(GRETLINC) $< 

panel_data.lo: panel_data.c $(GRETLLIB)
	$(COMPILE) $(GRETLINC) $< 

progress_bar.lo: progress_bar.c
	$(COMPILE) $(GRETLINC) $(GTKINC) $< 

gnumeric_import.lo: gnumeric_import.c import_common.c $(GRETLLIB)
	$(COMPILE) $(GRETLINC) $(GTKINC) $(XML_CFLAGS) $< 

excel_import.lo: excel_import.c import_common.c xltypes.h $(GRETLLIB)
	$(COMPILE) $(GRETLINC) $(GTKINC) $<

workbook.lo: workbook.c biff.h
	$(COMPILE) $(GRETLINC) $(OLE_CFLAGS) $<

ms-ole.lo: ms-ole.c ms-ole.h
	$(COMPILE) $(OLE_CFLAGS) $<

$(GRETLLIB):
	$(MAKE) -C ../lib

.PHONY: 

install: $(PLUGINS) installdirs
	$(LIBTOOL) --mode=install $(INSTALL_PROGRAM) \
	$(PLUGINS) $(share)/plugins

install-strip: $(PLUGINS) installdirs
	$(LIBTOOL) --mode=install $(INSTALL_PROGRAM) -s \
	$(PLUGINS) $(share)/plugins

installdirs:
	$(topsrc)/tools/mkinstalldirs $(share)/plugins

clean:
	rm -f *.o *.lo $(PLUGINS) core 
	rm -rf .libs

depend:
	makedepend -Y$(topsrc)/lib/src -o.lo *.c 

