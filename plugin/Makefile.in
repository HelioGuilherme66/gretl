	$(LINK) -o $@ $< $(GRETLLIB)

stata_import.la: stata_import.lo
	$(LINK) -o $@ $< $(GRETLLIB) $(GLIB_LIBS)

spss_import.la: spss_import.lo
	$(LINK) -o $@ $< $(GRETLLIB)

