topsrc = ..

prefix = @prefix@
exec_prefix = @exec_prefix@
CC = @CC@
CFLAGS = @CFLAGS@
MAKE = @MAKE@
INSTALL = @INSTALL@
LN = @LN_S@

GTK_CFLAGS = @GTK_CFLAGS@
GTK_LIBS = @GTK_LIBS@
XML_CFLAGS = @XML_CFLAGS@
XML_LIBS = @XML_LIBS@
LIBOLE2_CFLAGS = @LIBOLE2_CFLAGS@
LIBOLE2_LIBS = @LIBOLE2_LIBS@
GMP_CFLAGS = @GMP_CFLAGS@
GMP_LIBS = @GMP_LIBS@

ifeq ($(CC),)
  CC = gcc
endif
ifeq ($(INSTALL_PROGRAM),)
  INSTALL_PROGRAM = $(INSTALL) -m 755
endif

# Installation directory
share = $(prefix)/share/gretl

override CFLAGS += -I.. -DHAVE_CONFIG_H

LIBTOOL = $(topsrc)/libtool
COMPILE = $(LIBTOOL) --mode=compile $(CC) -c $(CFLAGS) 
LINK = $(LIBTOOL) --mode=link $(CC) $(CFLAGS) -shared

GRETLINC = -I$(topsrc)/lib/src
GRETLLIB = ../lib/libgretl.la

PLUGINS = stats_tables.so panel_data.so progress_bar.so \
	gnumeric_import.so excel_import.so des_import.so

ifdef GMP_LIBS
  PLUGINS += mp_ols.so
endif

ifeq ($(LIBOLE2_LIBS),)
  query-ms-ole.lo=ms-ole.lo
  vpath %.c libole2
  vpath %.h libole2
  LIBOLE2_CFLAGS := -I. $(shell glib-config --cflags)
endif

all: $(PLUGINS)

stats_tables.so: stats_tables.lo
	$(LINK) -o $@ $< $(GRETLLIB)

panel_data.so: panel_data.lo
	$(LINK) -o $@ $< $(GRETLLIB)

progress_bar.so: progress_bar.lo
	$(LINK) -o $@ $< $(GTK_LIBS)

gnumeric_import.so: gnumeric_import.lo
	$(LINK) -o $@ $< $(GTK_LIBS) $(GRETLLIB) $(XML_LIBS)

excel_import.so: excel_import.lo workbook.lo $(query-ms-ole.lo)
	$(LINK) -o $@ $^ $(GTK_LIBS) $(GRETLLIB) $(LIBOLE2_LIBS)

des_import.so: des_import.lo 
	$(LINK) -o $@ $^ $(GRETLLIB) -lz

mp_ols.so: mp_ols.lo
	$(LINK) -o $@ $< $(GRETLLIB) $(GMP_LIBS)

stats_tables.lo: stats_tables.c $(GRETLLIB) 
	$(COMPILE) $(GRETLINC) $< 

panel_data.lo: panel_data.c $(GRETLLIB)
	$(COMPILE) $(GRETLINC) $< 

progress_bar.lo: progress_bar.c
	$(COMPILE) $(GRETLINC) $(GTK_CFLAGS) $< 

gnumeric_import.lo: gnumeric_import.c import_common.c $(GRETLLIB)
	$(COMPILE) $(GRETLINC) $(GTK_CFLAGS) $(XML_CFLAGS) $< 

excel_import.lo: excel_import.c import_common.c xltypes.h $(GRETLLIB)
	$(COMPILE) $(GRETLINC) $(GTK_CFLAGS) $<

des_import.lo: des_import.c $(GRETLLIB)
	$(COMPILE) $(GRETLINC) $<

workbook.lo: workbook.c biff.h
	$(COMPILE) $(GRETLINC) $(LIBOLE2_CFLAGS) $<

ms-ole.lo: ms-ole.c ms-ole.h
	$(COMPILE) $(LIBOLE2_CFLAGS) $<

mp_ols.lo: mp_ols.c
	$(COMPILE) $(GRETLINC) $(GMP_CFLAGS) $<

$(GRETLLIB):
	$(MAKE) -C ../lib

.PHONY: 

install: $(PLUGINS) installdirs
	$(LIBTOOL) --mode=install $(INSTALL_PROGRAM) \
	$(PLUGINS) $(share)/plugins

install-strip: $(PLUGINS) installdirs
	$(LIBTOOL) --mode=install $(INSTALL_PROGRAM) -s \
	$(PLUGINS) $(share)/plugins

installdirs:
	$(topsrc)/tools/mkinstalldirs $(share)/plugins

clean:
	rm -f *.o *.lo $(PLUGINS) core 
	rm -rf .libs

depend:
	makedepend -Y$(topsrc)/lib/src -o.lo *.c 

distdepend: depend
	$(topsrc)/tools/dist_depend.pl

