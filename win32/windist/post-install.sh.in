#!/bin/sh

prefix=@prefix@
GDLL="libgretl-1.0-1.dll"

# ensure that the libgretl DLL is in the right place
if [ -f ${prefix}/../bin/${GDLL} ] ; then
  mv ${prefix}/../bin/${GDLL} ${prefix}
fi

# delete stuff that's not needed in a run-only Windows package
rm -rf ${prefix}/include
rm -rf ${prefix}/appdata
rm -rf ${prefix}/pkgconfig
rm -rf ${prefix}/share/man
rm -rf ${prefix}/*.a
rm -rf ${prefix}/*.la
rm -rf ${prefix}/plugins/*.a
rm -rf ${prefix}/plugins/*.la

