topsrc = @top_srcdir@
datarootdir = @datarootdir@

CC = @CC@
CFLAGS = @CFLAGS@
MAKE = @MAKE@
XML_CFLAGS = @XML_CFLAGS@
XML_LIBS = @XML_LIBS@
XSLT_CFLAGS = @XSLT_CFLAGS@
XSLT_LIBS = @XSLT_LIBS@
GLIB_CFLAGS = @GLIB_CFLAGS@
GLIB_LIBS = @GLIB_LIBS@

OMP_OPT = @OPENMP_CFLAGS@

prefix = @prefix@
datadir = @datadir@
localedir = $(datadir)/locale

GRETLINC = -I$(topsrc)/lib/src -I../..
GRETLLIB = ../../lib/libgretl-1.0.la

CMDSDIR = $(topsrc)/doc/commands

vpath %.c = $(CMDSDIR)
vpath %.dtd = $(CMDSDIR)
vpath %.xsl = $(CMDSDIR)

LIBTOOL = ../../libtool

CMDSDIR = $(topsrc)/doc/commands
SHAREDIR = $(topsrc)/share

CMDDTD = $(CMDSDIR)/gretl_commands.dtd
CMDSRC = $(CMDSDIR)/gretl_commands.xml \
	$(CMDSDIR)/gretl_commands_es.xml \
        $(CMDSDIR)/gretl_commands_pt.xml \
	$(CMDSDIR)/gretl_commands_it.xml

FNCDTD = $(CMDSDIR)/genr_funcs.dtd
FNCSRC = $(CMDSDIR)/genr_funcs.xml

HLPXSL = $(CMDSDIR)/gretltxt.xsl \
	$(CMDSDIR)/gretlhlp.xsl \
	$(CMDSDIR)/equations.xsl 

TEXXSL = $(CMDSDIR)/gretltex.xsl

XMLSTRS = $(CMDSDIR)/hlp_l10n.xml $(CMDSDIR)/hlpstrs_en.xml \
  $(CMDSDIR)/hlpstrs_es.xml $(CMDSDIR)/hlpstrs_pt.xml $(CMDSDIR)/hlpstrs_it.xml

EQNLIST = $(CMDSDIR)/eqn_list.xml
EQNXSL = $(CMDSDIR)/equations.xsl

HLPSTAMP = $(SHAREDIR)/hlp.stamp
FIGSTAMP = $(SHAREDIR)/fig.stamp
GENSTAMP = $(SHAREDIR)/gen.stamp
OUTPUT_DIR = $(SHAREDIR)

TOPICDEFS = -DLOCALEDIR=\"$(localedir)\" -DHAVE_CONFIG_H

progs: xsltrans skeleton reflow validate topiclist tables matfuncs

xsltrans: xsltrans.c 
	$(CC) $(CFLAGS) $(XSLT_CFLAGS) -o $@ $^ $(XSLT_LIBS)

reflow: reflow.c
	$(CC) $(CFLAGS) -o $@ $^ 

skeleton: skeleton.o
	$(LIBTOOL) --mode=link $(CC) $(OMP_OPT) -o $@ $^ $(GRETLLIB)

validate: validate.o
	$(LIBTOOL) --mode=link $(CC) $(OMP_OPT) -o $@ $^ $(GRETLLIB)

topiclist: topiclist.o
	$(LIBTOOL) --mode=link $(CC) $(OMP_OPT) -o $@ $^ $(GRETLLIB) $(GLIB_LIBS)

tables: tables.o
	$(LIBTOOL) --mode=link $(CC) $(OMP_OPT) -o $@ $^ $(GRETLLIB)

matfuncs: matfuncs.o
	$(LIBTOOL) --mode=link $(CC) $(OMP_OPT) -o $@ $^ $(GRETLLIB)

skeleton.o: skeleton.c
	$(CC) $(CFLAGS) $(XML_CFLAGS) $(GRETLINC) -c $<

validate.o: validate.c
	$(CC) $(CFLAGS) $(XML_CFLAGS) $(GRETLINC) -c $<

topiclist.o: topiclist.c $(topsrc)/lib/src/libgretl.h
	$(CC) $(CFLAGS) $(TOPICDEFS) $(XML_CFLAGS) $(GLIB_CFLAGS) $(GRETLINC) -c $<

tables.o: tables.c $(topsrc)/lib/src/genmain.c \
	$(topsrc)/lib/src/monte_carlo.c
	$(CC) $(CFLAGS) $(XML_CFLAGS) $(GRETLINC) -c $<

matfuncs.o: matfuncs.c $(topsrc)/lib/src/libgretl.h
	$(CC) $(CFLAGS) $(TOPICDEFS) $(XML_CFLAGS) $(GLIB_CFLAGS) $(GRETLINC) -c $<

# test generation of XML skeleton from libgretl info:
# the skeleton could be used as a template for translation
skeleton.xml: skeleton gretl_commands.dtd
	./skeleton $(CMDSDIR) > $@

$(EQNLIST): $(EQNXSL) $(CMDSDIR)/gretl_commands.xml
	xsltproc $(EQNXSL) $(CMDSDIR)/gretl_commands.xml > eqn_list.new
	if diff --brief $@ eqn_list.new	| grep eqn ; then cp eqn_list.new $@ ; fi
	rm -f eqn_list.new

# we'll do the following manually: it's a bit hyperactive
$(FIGSTAMP): $(EQNLIST)
	$(topsrc)/doc/texmath2png.pl $< $(SHAREDIR)/texfigs && touch $@

# Generate "online" help files
$(HLPSTAMP): xsltrans reflow $(CMDSRC) $(CMDDTD) $(HLPXSL) $(XMLSTRS) 
	./xsltrans --cmds --plain $(CMDSDIR)/gretl_commands.xml && \
	./reflow < tmp.txt > $(SHAREDIR)/gretlcli.hlp
	./xsltrans --cmds --pango $(CMDSDIR)/gretl_commands.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/gretlcmd.hlp
	./xsltrans --gui --pango $(CMDSDIR)/gretl_commands.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/gretlgui.hlp
	./xsltrans --cmds --plain $(CMDSDIR)/gretl_commands_it.xml && \
	./reflow < tmp.txt > $(SHAREDIR)/gretlcli.hlp.it
	./xsltrans --cmds --pango $(CMDSDIR)/gretl_commands_it.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/gretlcmd.hlp.it
	./xsltrans --gui --pango $(CMDSDIR)/gretl_commands_it.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/gretlgui.hlp.it
	./xsltrans --cmds --plain $(CMDSDIR)/gretl_commands_es.xml && \
	./reflow < tmp.txt > $(SHAREDIR)/gretlcli.hlp.es
	./xsltrans --cmds --pango $(CMDSDIR)/gretl_commands_es.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/gretlcmd.hlp.es
	./xsltrans --gui --pango $(CMDSDIR)/gretl_commands_es.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/gretlgui.hlp.es 
	./xsltrans --cmds --plain $(CMDSDIR)/gretl_commands_pt.xml && \
	./reflow < tmp.txt > $(SHAREDIR)/gretlcli.hlp.pt
	./xsltrans --cmds --pango $(CMDSDIR)/gretl_commands_pt.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/gretlcmd.hlp.pt
	./xsltrans --gui --pango $(CMDSDIR)/gretl_commands_pt.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/gretlgui.hlp.pt 
	touch $@

$(GENSTAMP): xsltrans reflow $(FNCSRC) $(FNCDTD) $(HLPXSL) $(XMLSTRS) 
	./xsltrans --funcs --plain $(CMDSDIR)/genr_funcs.xml && \
	./reflow < tmp.txt > $(SHAREDIR)/genrcli.hlp
	./xsltrans --funcs --pango $(CMDSDIR)/genr_funcs.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/genrgui.hlp
	./xsltrans --funcs --plain $(CMDSDIR)/genr_funcs_it.xml && \
	./reflow < tmp.txt > $(SHAREDIR)/genrcli.hlp.it
	./xsltrans --funcs --pango $(CMDSDIR)/genr_funcs_it.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/genrgui.hlp.it
	./xsltrans --funcs --plain $(CMDSDIR)/genr_funcs_pt.xml && \
	./reflow < tmp.txt > $(SHAREDIR)/genrcli.hlp.pt
	./xsltrans --funcs --pango $(CMDSDIR)/genr_funcs_pt.xml && \
	./reflow --markup < tmp.txt > $(SHAREDIR)/genrgui.hlp.pt
	touch $@

.PHONY: test

# generate some tables for manual automatically, to ensure
# they remain in step with the actual code
textables: tables matfuncs $(CMDSDIR)/genr_funcs.xml
	./tables --internals > ../tex/tabinternals.tex && \
	./tables --functions > ../tex/tabfunctions.tex && \
	./tables --loopcmds > ../tex/tabloopcmds.tex && \
	./tables --nonloopcmds > ../tex/tabnonloopcmds.tex && \
	LANG=en_US ./matfuncs $(CMDSDIR)/genr_funcs.xml > ../tex/matfuncs.tex && \
	touch $@

textables_it: tables matfuncs $(CMDSDIR)/genr_funcs_it.xml
	./tables --internals > ../tex_it/tabinternals.tex && \
	./tables --functions > ../tex_it/tabfunctions.tex && \
	./tables --loopcmds > ../tex_it/tabloopcmds.tex && \
	./tables --nonloopcmds > ../tex_it/tabnonloopcmds.tex && \
	LANG=it_IT ./matfuncs $(CMDSDIR)/genr_funcs_it.xml > ../tex_it/matfuncs.tex && \
	touch $@

textables_es: tables matfuncs $(CMDSDIR)/genr_funcs_es.xml
	./tables --internals > ../tex_es/tabinternals.tex && \
	./tables --functions > ../tex_es/tabfunctions.tex && \
	./tables --loopcmds > ../tex_es/tabloopcmds.tex && \
	./tables --nonloopcmds > ../tex_es/tabnonloopcmds.tex && \
	LANG=es_ES ./matfuncs $(CMDSDIR)/genr_funcs_es.xml > ../tex_es/matfuncs.tex && \
	touch $@

textables_pt: tables matfuncs $(CMDSDIR)/genr_funcs_pt.xml
	./tables --internals > ../tex_pt/tabinternals.tex && \
	./tables --functions > ../tex_pt/tabfunctions.tex && \
	./tables --loopcmds > ../tex_pt/tabloopcmds.tex && \
	./tables --nonloopcmds > ../tex_pt/tabnonloopcmds.tex && \
	LANG=pt_PT ./matfuncs $(CMDSDIR)/genr_funcs_pt.xml > ../tex_pt/matfuncs.tex && \
	touch $@

functex: xsltrans reflow $(FNCSRC) $(FNCDTD) $(TEXXSL) $(XMLSTRS)
	cat $(CMDSDIR)/tex.entities | sed s+DTDDIR+$(CMDSDIR)+ > tmp.xml && \
	cat $(CMDSDIR)/genr_funcs.xml | grep -v DOCTYPE | \
	grep -v 'xml version' >> tmp.xml && \
	./xsltrans --funcs --tex tmp.xml --docdir=$(CMDSDIR) && \
	./reflow < tmp.txt > ../tex/funcbody.tex
	touch $@

