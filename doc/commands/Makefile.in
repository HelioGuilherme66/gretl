	cat $(PT_FNCSRC) | grep -v DOCTYPE | grep -v 'xml version' >> ftex_pt.xml && \
	./xsltrans --funcs --tex ftex_pt.xml --docdir=$(CMDSDIR) | \
	./reflow > ../tex_pt/funcbody.tex && rm ftex_pt.xml && touch $@

