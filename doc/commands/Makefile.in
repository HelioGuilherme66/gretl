GL_FNSRC = $(CMDSDIR)/gretl_functions_gl.xml

HLPXSL = $(CMDSDIR)/gretltxt.xsl \
	$(CMDSDIR)/gretlhlp.xsl \
	$(CMDSDIR)/equations.xsl 

