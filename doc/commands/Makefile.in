CLI_CMDREF_GL = $(SHAREDIR)/$(CLI_CMDREF).gl
GUI_CMDREF_GL = $(SHAREDIR)/$(CLI_CMDREF).gl
GUI_HELP_GL = $(SHAREDIR)/$(CLI_CMDREF).gl
