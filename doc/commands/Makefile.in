FNCDTD = $(CMDSDIR)/gretl_functions.dtd
EN_FNSRC = $(CMDSDIR)/gretl_functions_en.xml
ES_FNSRC = $(CMDSDIR)/gretl_functions_es.xml
IT_FNSRC = $(CMDSDIR)/gretl_functions_it.xml
