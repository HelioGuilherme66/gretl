# Rules for generated TeX files wanted in the ../tex directory

../tex/tabinternals.tex: tables
	./tables --internals > $@

../tex/tabfunctions.tex: tables
	./tables --functions > $@

../tex/tabloopcmds.tex: tables
	./tables --loopcmds > $@

../tex/tabnonloopcmds.tex: tables
	./tables --nonloopcmds > $@

../tex/matfuncs.tex: matfuncs $(EN_FNSRC)
	LANG=en_US ./matfuncs $(EN_FNSRC) > $@

../tex/funcbody.tex: xsltrans reflow $(EN_FNSRC) $(FNCDTD) $(TEXXSL) $(XMLSTRS) $(CHAPREFS)
	./xsltrans --funcs --tex $(EN_FNSRC) --lang=en --docdir=$(CMDSDIR) | \
	./reflow > $@

../tex/refbody.tex: xsltrans reflow $(EN_SRC) $(CMDDTD) $(TEXXSL) $(XMLSTRS) $(CHAPREFS)
	./xsltrans --cmds --tex $(EN_SRC) --lang=en --docdir=$(CMDSDIR) | \
	./reflow > $@

../tex/cmdtopics.tex: topiclist $(EN_SRC)
	LANG=en_US ./topiclist $(EN_SRC) > $@

