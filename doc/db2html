# !/bin/sh

XMLDCL=/opt/jade/share/xml.dcl
WORKDIR=./manual.html
DB_STYLESHEET=manual-both.dsl

if [ ! -r $1 ]
then
  echo Cannot read \"$1\".  Exiting. >&2
  exit 1
fi

mkdir -p $WORKDIR

SAVE_PWD=`pwd`
echo "working on ../$1"
(cd $WORKDIR; jade -t sgml -ihtml -d ../${DB_STYLESHEET}\#html $XMLDCL ../$1; cd $SAVE_PWD)

exit 0
