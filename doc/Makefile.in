# Note: tex_es was included below: it can be reinstated
# if the Spanish TeX files are updated at some point

SUBDIRS = tex tex_it 

.PHONY : subdirs $(SUBDIRS) clean install 

subdirs: $(SUBDIRS)

$(SUBDIRS):
	make -C $@

clean:
	for d in $(SUBDIRS) ; do \
	make -C $$d clean ; done

install: 
	for d in $(SUBDIRS) ; do \
	make -C $$d install ; done
