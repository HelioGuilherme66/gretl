topsrc = @top_srcdir@
docsrc = $(topsrc)/doc

GUIDE = gretl-guide-es.pdf
REF = gretl-ref-es.pdf

TEXSRC = gretl-guide-es.tex \
	gretl-ref-es.tex \
	cli.tex \
	criteria.tex \
	graphs.tex \
	modes.tex \
	persistent.tex \
	sampling.tex \
	trouble.tex \
	looping.tex \
	starting.tex \
	discrete.tex \
	appendices.tex \
	matrices.tex \
	introduction.tex \
	datafiles.tex \
	panel.tex \
	genr.tex \
	biblio.tex \
	mle.tex \
	nls.tex \
	timeseries.tex \
	functions.tex \
	reftables.tex

WEBDIR = /home/cottrell/stats/esl/website

XMLFILES = $(docsrc)/chapters_es/cmdlist.xml \
	$(docsrc)/chapters_es/cmdref.xml \
	$(docsrc)/chapters_es/optarg.xml \
	$(docsrc)/chapters_es/cmdtopics.xml \
	$(docsrc)/shell_es.xml

TEXXSLT = $(docsrc)/gretltex.xsl
MANXSLT = $(docsrc)/commands/gretlman.xsl

$(GUIDE): gretl-guide-es.tex links textables
	pdflatex $<
	pdflatex $<
	pdflatex $<

$(REF): gretl-ref-es.tex refbody.tex reftables.tex textables links
	pdflatex $<
	pdflatex $<
	pdflatex $<

refbody.tex: $(XMLFILES) $(TEXXSLT) 
	xsltproc -o refbody.tex $(TEXXSLT) $(docsrc)/shell_es.xml

$(docsrc)/chapters_es/cmdlist.xml: $(docsrc)/commands/gretl_commands_es.xml $(MANXSLT)
	make -C ../commands docbook_es

$(docsrc)/chapters/cmdtopics.xml: $(docsrc)/commands/gretl_commands_es.xml $(MANXSLT)
	make -C ../commands topiclist_es

.PHONY : textables links onepass refpass install clean

textables:
	make -C ../commands textables

links:
	rm -f gretl.sty && ln -s $(docsrc)/gretl.sty ./gretl.sty
	rm -f figures && ln -s $(docsrc)/figures_es ./figures
	for f in $(TEXSRC) ; do \
	if [ ! -f $$f ] ; then ln -s $(docsrc)/tex_es/$$f . ; fi ; done

onepass: links textables
	pdflatex gretl-guide-es

refpass: refbody.tex links textables
	pdflatex gretl-ref-es

install: $(GUIDE) $(REF)
	cp $(GUIDE) $(REF) $(WEBDIR)

clean:
	rm -f *.aux *.log *.out *.toc *.tpt *.pdf *~
	rm -f refbody.tex
	rm -f ../commands/textables ../commands/topiclist_es

distclean: clean
	rm -rf CVS
