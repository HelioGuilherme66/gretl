topsrc = @top_srcdir@
docsrc = $(topsrc)/doc

GUIDE = gretl-guide-es.pdf
REF = gretl-ref-es.pdf

TEXSRC = cli.tex \
	criteria.tex \
	graphs.tex \
	modes.tex \
	persistent.tex \
	sampling.tex \
	trouble.tex \
	looping.tex \
	starting.tex \
	discrete.tex \
	appendices.tex \
	matrices.tex \
	introduction.tex \
	datafiles.tex \
	robust_vcv.tex \
	panel.tex \
	genr.tex \
	biblio.tex \
	mle.tex \
	gmm.tex \
	probit.tex \
	nls.tex \
	timeseries.tex \
	vecm.tex \
	functions.tex \
	gretltex.tex \
	cheatsheet.tex \
	reftables.tex \
	cmdref.tex \
	funcref.tex \
	optarg.tex

WEBDIR = /home/cottrell/stats/esl/website

$(GUIDE): gretl-guide-es.tex links textables
	pdflatex $<
	pdflatex $<
	pdflatex $<

$(REF): gretl-ref-es.tex links cmdtex functex topiclist
	pdflatex $<
	pdflatex $<
	pdflatex $<

gretl-guide-es.tex:
	if [ ! -f $@ ] ; then ln -sf $(docsrc)/tex_es/$@ . ; fi

gretl-ref-es.tex:
	if [ ! -f $@ ] ; then ln -sf $(docsrc)/tex_es/$@ . ; fi

.PHONY : links cmdtex functex textables onepass refpass topiclist install clean

links:
	rm -f gretl.sty && ln -s $(docsrc)/gretl.sty ./gretl.sty
	rm -f figures && ln -s $(docsrc)/figures_es ./figures
	for f in $(TEXSRC) ; do \
	if [ ! -f $$f ] ; then ln -sf $(docsrc)/tex_es/$$f . ; fi ; done

cmdtex:
	make -C ../commands cmdtex_es

topiclist:
	make -C ../commands topiclist_es

textables:
	make -C ../commands textables

functex:
	make -C ../commands functex_es

onepass: gretl-guide-es.tex links textables
	pdflatex gretl-guide-es

refpass: gretl-ref-es.tex links cmdtex functex topiclist
	pdflatex gretl-ref-es

install: $(GUIDE) $(REF)
	cp $(GUIDE) $(REF) $(WEBDIR)

clean:
	rm -f *.aux *.log *.out *.toc *.tpt *.pdf
	rm -f refbody.tex funcbody.tex cmdtopics.tex
	rm -f ../commands/textables ../commands/topiclist_es 
	rm -f ../commands/cmdtex_es ../commands/functex_es

distclean: clean
	rm -rf CVS
