topsrc = @top_srcdir@

CC = @CC@
CFLAGS = @CFLAGS@
MAKE = @MAKE@
GTK_CFLAGS = @GTK_CFLAGS@

SRCS = gtkitementry.c gtkplotpc.c gtkpsfont.c \
	gtkiconlist.c gtkplot.c gtkplotps.c gtksheet.c \
	gtkfilelist.c gtkdirtree.c gtkiconfilesel.c

HDRS = gtkextra.h gtkitementry.h gtkplotpc.h gtkpsfont.h \
	gtkiconlist.h gtkplot.h gtkplotps.h gtksheet.h \
	gtkfilelist.h gtkdirtree.h gtkiconfilesel.h

VPATH = $(topsrc)/gui/gtkextra-lite

override CFLAGS += -I. $(GTK_CFLAGS) -I../..

OBJS = $(SRCS:.c=.o)

LIB = libgtkextra-lite.a

all: $(LIB)

$(LIB): $(OBJS)
	ar -rs $@ $^

clean:
	rm -f *.o $(LIB)


