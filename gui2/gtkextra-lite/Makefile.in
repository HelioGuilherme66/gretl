topsrc = @top_srcdir@

CC = @CC@
CFLAGS = @CFLAGS@
MAKE = @MAKE@
GTK_CFLAGS = @GTK_CFLAGS@

VPATH = $(topsrc)/gui2/gtkextra-lite

override CFLAGS += -I$(topsrc)/gui2/gtkextra-lite $(GTK_CFLAGS) -I$(topsrc)/lib/src

SRCS = psplot.c gtkpsfont.c
HDRS = psplot.h gtkpsfontpango.h
OBJS = $(SRCS:.c=.o)

LIB = libgtkextra-lite.a

all: $(LIB)

$(LIB): $(OBJS)
	ar -rs $@ $^

clean:
	rm -f *.o $(LIB)



