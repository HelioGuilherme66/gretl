# needs to be generalized as Makefile.in

INSTALL = /bin/install -c
docdir = /opt/gnome2/share/gnome/help/gretl2/C

gretl2-C.omf: gretl2-C-in.omf
	  scrollkeeper-preinstall $(docdir)/`awk 'BEGIN {RS = ">" } \
	  /identifier/ {print $$0}' $< | awk 'BEGIN {FS="\""} /url/ \
	  {print $$2}'` $< $@; 
	touch omf_timestamp

install: gretl2-C.omf
	../../tools/mkinstalldirs /opt/gnome2/share/omf/gretl2
	$(INSTALL) -m 644 $< /opt/gnome2/share/omf/gretl2
	scrollkeeper-update -p /opt/gnome2/var/scrollkeeper
