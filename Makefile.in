topsrc = .
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
CC = @CC@
CFLAGS = @CFLAGS@
MAKE = @MAKE@
INSTALL = @INSTALL@
LN = @LN_S@
CLI_LIBS = @CLI_LIBS@
RL_OBJ = @RL_OBJ@
USE_GTK2 = @USE_GTK2@

ifeq ($(CC),)
  CC = gcc
endif

ifeq ($(USE_GTK2),"yes")
  GUIDIR = gui2
else
  GUDIR = gui
endif

INSTALL_PROGRAM = ${INSTALL} -m 755
INSTALL_DATA = ${INSTALL} -m 644

export

tooldir = $(topsrc)/tools

SUBDIRS = cephes lib cli $(GUIDIR) plugin po

.PHONY :

all: $(SUBDIRS)
	for d in $^ ; do $(MAKE) -C $$d ; done

clean:
	for d in $(SUBDIRS) ; do $(MAKE) -C $$d clean; done
	make -C win32 clean

installdirs:
	$(tooldir)/mkinstalldirs $(libdir) $(includedir) $(bindir)

install: $(SUBDIRS) installdirs install-man
	for d in $(SUBDIRS) ; do $(MAKE) -C $$d install; done
	$(MAKE) -C share install

install-strip: $(SUBDIRS) installdirs install-man	
	for d in $(SUBDIRS) ; do $(MAKE) -C $$d install-strip; done
	$(MAKE) -C share install-strip

install-man:
	$(tooldir)/install_man $(tooldir) $(prefix) gretl.1 
	$(tooldir)/install_man $(tooldir) $(prefix) gretl-config.1

tags:
	etags lib/src/*.[hc] cli/*.[hc] $(GUIDIR)/*.[hc] plugin/*.[hc]

depend:
	for d in $(SUBDIRS) ; do $(MAKE) -C $$d depend; done

distdepend:
	- for d in $(SUBDIRS) ; do $(MAKE) -C $$d distdepend 2>/dev/null; done	

dist: distdepend	
	./tools/makedist

snapshot: distdepend
	./tools/makesnap

distclean: clean
	make -C win32 clean
	rm -f config.log config.cache config.status config.h 
	rm -f gretl_sh gretl-config gretl2_sh gretl2.pc
	rm -f libtool Makefile lib/Makefile cli/Makefile gui/Makefile \
	share/Makefile plugin/Makefile cephes/Makefile
	rm -rf win32/dlls win32/import-libs win32/gtkextra-lib win32/plugins

check:
	make -C tests check








