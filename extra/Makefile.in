topsrc = @top_srcdir@

have_gtk = @have_gtk@

VPATH = $(topsrc)/extra

ifeq ($(have_gtk),2.0)
  CFLAGS = -g -O2 -Wall `pkg-config --cflags gretl`
  LDFLAGS = `pkg-config --libs gretl`
else  
  CFLAGS = -g -O2 -Wall `gretl-config --cflags`
  LDFLAGS = `gretl-config --libs`
endif

all: simple_client

clean:
	rm -f ./simple_client core 

distclean: clean
	rm -f Makefile