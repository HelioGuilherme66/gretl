topsrc = @top_srcdir@
prefix = @prefix@
datarootdir = @datarootdir@
win32pkg = @win32pkg@
have_latex = @have_latex@
tooldir = $(topsrc)/tools

MAKE = @MAKE@
INSTALL = @INSTALL@

ifeq ($(INSTALL_DATA),)
  INSTALL_DATA = $(INSTALL) -m 644
endif

ifeq ($(win32pkg),yes)
  GFNDIR = $(prefix)/functions
else
  GFNDIR = $(datarootdir)/gretl/functions
endif

ifeq ($(have_latex),yes)
  MAKEDOC = $(MAKE) -C doc
  INSTDOC = install-doc
endif

GRETLCLI = ../../cli/gretlcli

PKG = ivpanel
PKGSRC = $(topsrc)/addons/ivpanel

vpath %.inp $(PKGSRC)
vpath %.spec $(PKGSRC)

INP = ivpanel.inp
SPEC = ivpanel.spec
SMPL = nc_crime.inp

all: $(PKG).gfn pdfdoc

$(PKG).gfn: symlinks $(INP) $(SPEC) $(SMPL)
	$(GRETLCLI) -t pkg.inp

$(PKG).zip: $(PKG).gfn pdfdoc
	echo makepkg $(PKG).zip | $(GRETLCLI) -t -

.PHONY : symlinks pdfdoc check install installdirs clean

symlinks:
	@if [ ! -f $(SPEC) ] || [ $(PKGSRC)/$(SPEC) -nt $(SPEC) ] ; then ln -sf $(PKGSRC)/$(SPEC) . ; fi
	@if [ ! -f $(SMPL) ] || [ $(PKGSRC)/$(SMPL) -nt $(SMPL) ] ; then ln -sf $(PKGSRC)/$(SMPL) . ; fi

pdfdoc: $(PKG).gfn
	$(MAKEDOC)

check: $(PKG).gfn
	$(tooldir)/test_addon $(GRETLCLI)

install: $(PKG).gfn installdirs	$(INSTDOC)
	$(INSTALL_DATA) $(PKG).gfn $(DESTDIR)$(GFNDIR)/$(PKG)

install-doc: doc/$(PKG).pdf
	$(INSTALL_DATA) doc/$(PKG).pdf $(DESTDIR)$(GFNDIR)/$(PKG)

installdirs:
	$(tooldir)/mkinstalldirs $(DESTDIR)$(GFNDIR)/$(PKG)

clean: 
	@rm -f $(PKG).gfn $(PKG)-i18n.c $(PKG).xml $(PKG).zip
	@rm -f test.out
	@$(MAKE) -C doc clean

