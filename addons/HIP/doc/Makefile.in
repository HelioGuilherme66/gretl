topsrc = @top_srcdir@

TEXDIR = $(topsrc)/doc/tex
DOCDIR = $(topsrc)/addons/HIP/doc

FIGS = HIP-sshot1.png \
       HIP-sshot2.png \
       HIP-sshot3.png

pdfdoc: links.stamp HIP.bib HIP.tex
	pdflatex HIP && bibtex HIP && pdflatex HIP && pdflatex HIP

links.stamp:
	if [ ! -f gretl.bst ] ; then ln -sf $(TEXDIR)/gretl.bst . ; fi
	if [ ! -f HIP.bib ] ; then ln -sf $(DOCDIR)/HIP.bib . ; fi
	if [ ! -f HIP.tex ] ; then ln -sf $(DOCDIR)/HIP.tex . ; fi
	for f in $(FIGS) ; do \
	if [ ! -f $$f ] ; then ln -sf $(DOCDIR)/$$f . ; fi ; done
	touch $@

clean:
	rm -f _region_.tex *~ *.log *.aux *.bbl *.blg *.toc \
	HIP.pdf links.stamp

