topsrc = @top_srcdir@

TEXDIR = $(topsrc)/doc/tex
DOCDIR = $(topsrc)/addons/gig/doc

pdfdoc: links.stamp gig.bib gig.tex
	pdflatex gig && bibtex gig && pdflatex gig && pdflatex gig

links.stamp:
	if [ ! -f gretl.bst ] ; then ln -sf $(TEXDIR)/gretl.bst . ; fi
	if [ ! -f gig.bib ] ; then ln -sf $(DOCDIR)/gig.bib . ; fi
	if [ ! -f gig.tex ] ; then ln -sf $(DOCDIR)/gig.tex . ; fi
	if [ ! -d graphs ] ; then ln -sf $(DOCDIR)/graphs . ; fi
	touch $@	

clean:
	rm -f _region_.tex *~ *.log *.aux *.bbl *.blg *.toc \
	links.stamp gig.pdf
