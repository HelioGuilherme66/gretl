topsrc = @top_srcdir@

TEXDIR = $(topsrc)/doc/tex
DOCDIR = $(topsrc)/addons/gig/doc

pdfdoc: links.stamp gig.bib gig.tex
	@ipdflatex gig && bibtex gig && pdflatex gig && pdflatex gig

links.stamp:
	@if [ ! -f gretl.bst ] ; then ln -sf $(TEXDIR)/gretl.bst . ; fi
	@iif [ ! -f gig.bib ] ; then ln -sf $(DOCDIR)/gig.bib . ; fi
	@iif [ ! -f gig.tex ] ; then ln -sf $(DOCDIR)/gig.tex . ; fi
	@iif [ ! -d graphs ] ; then ln -sf $(DOCDIR)/graphs . ; fi
	@itouch $@	

clean:
	@rm -f *.log *.aux *.bbl *.blg *.toc links.stamp gig.pdf
