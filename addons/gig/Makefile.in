topsrc = @top_srcdir@
prefix = @prefix@
datarootdir = @datarootdir@

MAKE = @MAKE@
INSTALL = @INSTALL@

ifeq ($(INSTALL_DATA),)
  INSTALL_DATA = $(INSTALL) -m 644
endif

GFNDIR = $(prefix)/share/gretl/functions

PKG = gig
PKGSRC = $(topsrc)/addons/$(PKG)

vpath %.inp $(PKGSRC)
vpath %.spec $(PKGSRC)

INP = gig_estimate.inp \
      gig.inp \
      gig_mle.inp \
      gig_plot.inp \
      gig_printout.inp \
      gig_setup.inp

$(PKG).gfn: links.stamp $(INP) $(PKG).spec
	gretlcli -b $(PKGSRC)/gig.inp

doc/gig.pdf:
	$(MAKE) -C doc

links.stamp:
	if [ ! -f $(PKG).spec ] ; then ln -sf $(PKGSRC)/$(PKG).spec . ; fi
	if [ ! -d examples ] ; then ln -s $(PKGSRC)/examples . ; fi
	touch $@

.PHONY : check install clean

check: $(PKG).gfn
	$(MAKE) -C examples check

install: $(PKG).gfn doc/$(PKG).pdf
	$(INSTALL_DATA) $(PKG).gfn $(DESTDIR)$(GFNDIR)/$(PKG)
	$(INSTALL_DATA) doc/$(PKG).pdf $(DESTDIR)$(GFNDIR)/$(PKG)
	for f in examples/*.inp examples/*.gdt examples/README ; do \
	$(INSTALL_DATA) $$f $(DESTDIR)$(GFNDIR)/$(PKG)/examples ; done

zipfile: $(PKG).gfn $(PKG)/gig.pdf 
	mkdir -p $(PKG)/examples && cp $(PKG).gfn $(PKG) && \
	cp doc/$(PKG).pdf $(PKG) && cp examples/*.inp $(PKG)/examples && \
	cp examples/*.gdt $(PKG)/examples && cp examples/README $(PKG)/examples && \
	zip -r $(PKG).zip $(PKG) && rm -rf $(PKG)

clean: 
	rm -f $(PKG).gfn $(PKG)-i18n.c $(PKG).xml $(PKG).zip links.stamp
	find . -name "*~" | xargs rm -f
	$(MAKE) -C doc clean


