#!/bin/sh

TOPSRC=$1
BUILDDIR=`pwd`
if [ "$TOPSRC" = "." ] ; then
  GUI2DIR="../gui2"
else
  GUI2DIR=${TOPSRC}/gui2
fi

cd ${TOPSRC}/gui && \
for f in \
  gretl.h gretltypes.h gretl_enums.h \
  about.c boxplots.c boxplots.h \
  calculator.c guiprint_common.c \
  callbacks.c callbacks.h \
  cmdstack.c cmdstack.h \
  console.c console.h dialogs.c \
  database.c database.h \
  datafiles.c datafiles.h \
  fileselect.c dialogs.h \
  graph_page.c graph_page.h \
  gpt_control.c gpt_control.h \
  gui_utils.c gui_utils.h guiprint.h \
  helpfiles.c helpfiles.h \
  model_table.c model_table.h \
  objectsave.c objectsave.h \
  series_view.c series_view.h \
  session.c session.h \
  selector.h \
  settings.c settings.h \
  ssheet.h \
  textutil.c textutil.h \
  webget.c webget.h \
  library.c library.h ; do
    rm -f $f
    ln -s ${GUI2DIR}/$f $f
done
cd $BUILDDIR

